@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/Register.css" />

<div class="split-screen-container">
    <div class="left-panel">
        <div class="panel-content fade-in">
            <a href="/" class="back-link"><i class="bi bi-arrow-left"></i> Home</a>

            <div class="header-section">
                <h1 class="auth-title">Join Licenta</h1>
                <p class="auth-subtitle">Create your account to get started.</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="input-group-modern mb-3">
                    <label asp-for="Input.FullName" class="input-label">Full Name</label>
                    <input asp-for="Input.FullName" class="input-field" autocomplete="name" aria-required="true" placeholder="Your full name" />
                    <span asp-validation-for="Input.FullName" class="text-danger small-text"></span>
                </div>

                <div class="input-group-modern mb-3">
                    <label asp-for="Input.Email" class="input-label">Email Address</label>
                    <input asp-for="Input.Email" class="input-field" autocomplete="username" aria-required="true" placeholder="email@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small-text"></span>
                </div>

                <div class="input-group-modern mb-3">
                    <label asp-for="Input.Password" class="input-label">Password</label>
                    <input asp-for="Input.Password" class="input-field" autocomplete="new-password" aria-required="true" placeholder="Min. 6 characters" />
                    <span asp-validation-for="Input.Password" class="text-danger small-text"></span>
                </div>

                <div class="input-group-modern mb-4">
                    <label asp-for="Input.ConfirmPassword" class="input-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="input-field" autocomplete="new-password" aria-required="true" placeholder="Re-enter password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small-text"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn-submit">
                    Create Account <i class="bi bi-person-plus"></i>
                </button>

                <div class="footer-section">
                    <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="register-link">Log in instead</a></p>
                </div>
            </form>
        </div>
    </div>

    <div class="right-panel">
        <div class="overlay-content">
            <div class="glass-box register-variant">
                <h3>Seamless Healthcare</h3>
                <p>"Join a network of professionals dedicated to modernizing the medical experience."</p>
                <div class="decorative-line"></div>
            </div>
        </div>
        <div class="animated-bg"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
