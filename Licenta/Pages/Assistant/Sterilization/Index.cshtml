@page
@model Licenta.Pages.Assistant.Sterilization.IndexModel

@{
    ViewData["Title"] = "Sterilization log";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/assistant.css" />
}

<h2 class="mb-3">Sterilization log</h2>

@if (TempData["StatusMessage"] is string msg)
{
    <div class="alert alert-info">@msg</div>
}

<div class="card mb-4">
    <div class="card-header bg-transparent border-0 pt-3">
        <h5 class="fw-bold mb-0">
            <i class="bi bi-plus-circle me-2"></i>Register new cycle
        </h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Add" class="row g-3">
            <div class="col-md-4">
                <label asp-for="Input.DeviceName" class="form-label"></label>
                <input asp-for="Input.DeviceName" class="form-control" />
                <span asp-validation-for="Input.DeviceName" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="Input.PerformedAt" class="form-label"></label>
                <input asp-for="Input.PerformedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="Input.PerformedAt" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="Input.CycleNumber" class="form-label"></label>
                <input asp-for="Input.CycleNumber" class="form-control" />
                <span asp-validation-for="Input.CycleNumber" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Input.Notes" class="form-label"></label>
                <textarea asp-for="Input.Notes" rows="2" class="form-control"></textarea>
                <span asp-validation-for="Input.Notes" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save cycle
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Cycles == null || !Model.Cycles.Any())
{
    <div class="alert alert-secondary">
        No sterilization cycles recorded.
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-transparent border-0 pt-3">
            <h5 class="fw-bold mb-0">
                <i class="bi bi-journal-medical me-2"></i>Last cycles
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Date / time</th>
                            <th>Device</th>
                            <th>Cycle no.</th>
                            <th>Notes</th>
                            <th class="text-end" style="width: 80px;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Cycles)
                        {
                            <tr>
                                <td>@c.PerformedAt.ToLocalTime().ToString("g")</td>
                                <td>@c.DeviceName</td>
                                <td>@c.CycleNumber</td>
                                <td>@(string.IsNullOrWhiteSpace(c.Notes) ? "-" : c.Notes)</td>
                                <td class="text-end">
                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Delete this entry?');">
                                        <input type="hidden" name="id" value="@c.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
