@page "{id:int}"
@model Licenta.Pages.Assistant.Appointments.AssistantAppointmentsCancelPageModel
@{
    ViewData["Title"] = "Cancel appointment";
}
<h2>Cancel appointment</h2>

<div class="alert alert-warning">
    Confirmați anularea programării pentru <strong>@Model.PatientName</strong> la <strong>@Model.DoctorName</strong>?
</div>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.CancelReason" class="form-label"></label>
        <textarea asp-for="Input.CancelReason" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Input.CancelReason" class="text-danger"></span>
    </div>

    <button class="btn btn-danger">Cancel appointment</button>
    <a asp-page="/Doctor/Appointments/Index" class="btn btn-secondary ms-2">Back</a>
</form>

@section Scripts {  
    <partial name="_ValidationScriptsPartial" />
}
