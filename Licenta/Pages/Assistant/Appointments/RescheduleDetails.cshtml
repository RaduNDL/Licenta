@page "{requestId:int}"
@model Licenta.Pages.Assistant.Appointments.RescheduleDetailsModel
@{
    ViewData["Title"] = "Reschedule details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/RescheduleDetails.css" />
}

<div class="details-wrapper">
    <h3 class="page-title">Request Details</h3>

    @if (TempData["StatusMessage"] is string status)
    {
        <div class="alert alert-info">@status</div>
    }

    @if (!Model.CanView)
    {
        <div class="alert alert-warning">You do not have permission to view this request.</div>
        <a asp-page="/Assistant/Appointments/RescheduleRequests" class="btn btn-outline-secondary">Return to List</a>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Patient</span>
                        <span class="info-value">@Model.PatientName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Doctor</span>
                        <span class="info-value">@Model.DoctorName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Status</span>
                        <span class="info-value">@Model.Status</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Original Appointment</span>
                        <span class="info-value">@Model.OldTime</span>
                    </div>
                </div>

                <div class="reason-box">
                    <span class="info-label">Reason for Request</span>
                    <div class="reason-text">"@Model.Reason"</div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="section-title">New Proposal Options</h4>

                @if (!Model.CanPropose)
                {
                    <div class="alert alert-secondary">Cannot add new options.</div>
                }
                else
                {
                    <form method="post" asp-page-handler="AddOption" class="row g-3 align-items-end mb-4">
                        <div class="col-md-4">
                            <label class="form-label">Start Time (Local)</label>
                            <input class="form-control" asp-for="InputStartLocal" type="datetime-local" required />
                            <span class="text-danger small" asp-validation-for="InputStartLocal"></span>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">End Time (Local)</label>
                            <input class="form-control" asp-for="InputEndLocal" type="datetime-local" required />
                            <span class="text-danger small" asp-validation-for="InputEndLocal"></span>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Location</label>
                            <input class="form-control" asp-for="InputLocation" required />
                            <span class="text-danger small" asp-validation-for="InputLocation"></span>
                        </div>

                        <div class="col-md-1">
                            <button class="btn btn-primary w-100" type="submit">Add</button>
                        </div>
                    </form>

                    @if (!string.IsNullOrWhiteSpace(Model.ProposeError))
                    {
                        <div class="alert alert-danger">@Model.ProposeError</div>
                    }
                }

                @if (!Model.Options.Any())
                {
                    <div class="alert alert-secondary mb-0">No time slots proposed yet.</div>
                }
                else
                {
                    <div class="options-list">
                        @foreach (var opt in Model.Options)
                        {
                            <div class="option-item">
                                <div class="option-details">
                                    <span class="option-time">@opt.Display</span>
                                    <span class="option-location">
                                        <i class="bi bi-geo-alt me-1"></i>@opt.Location
                                    </span>
                                </div>

                                @if (opt.IsChosen)
                                {
                                    <span class="badge-chosen">Patient Selected</span>
                                }
                            </div>
                        }
                    </div>

                    @if (Model.CanFinalizeProposed)
                    {
                        <div class="mt-4 pt-3 border-top">
                            <form method="post" asp-page-handler="FinalizeProposed">
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="bi bi-send me-2"></i>Send Proposal to Patient
                                </button>
                            </form>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-page="/Assistant/Appointments/RescheduleRequests" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Requests
            </a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/RescheduleDetails.js"></script>
}
