@page
@model Licenta.Pages.Assistant.Appointments.AppointmentRequestsPageModel

@{
    ViewData["Title"] = "Appointment Requests";
}

<h2 class="mb-4">Appointment Requests</h2>

@if (!Model.PendingRequests.Any())
{
    <div class="alert alert-secondary">No pending appointment requests.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Patient</th>
                <th>Uploaded</th>
                <th>Requested Time</th>
                <th>Reason</th>
                <th style="width:180px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.PendingRequests)
            {
                <tr>
                    <td>@r.PatientName</td>
                    <td>@r.UploadedAt.ToLocalTime().ToString("g")</td>
                    <td>@r.RequestedDisplay</td>
                    <td>@r.Reason</td>
                    <td>
                        <a class="btn btn-sm btn-primary"
                           asp-page="/Assistant/Appointments/Process"
                           asp-route-attachmentId="@r.AttachmentId">
                            Process
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
