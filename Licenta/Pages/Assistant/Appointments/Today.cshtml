@page
@model Licenta.Pages.Assistant.Appointments.TodayModel

@{
    ViewData["Title"] = "Today's appointments";
}

<h2>Today's appointments</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">No appointments scheduled for today.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Time</th>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Reason</th>
                <th>Status</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Items)
            {
                <tr>
                    <td>@a.TimeLocal</td>
                    <td>@a.PatientName</td>
                    <td>@a.DoctorName</td>
                    <td>@a.Reason</td>
                    <td>@a.Status</td>
                    <td>
                        @if (a.CanCancel)
                        {
                            <a class="btn btn-sm btn-outline-danger"
                               asp-page="/Assistant/Appointments/Cancel"
                               asp-route-id="@a.Id">
                                Cancel
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
