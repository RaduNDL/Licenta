@page
@model Licenta.Pages.Administrator.AdminPanel.IndexModel
@{
    ViewData["Title"] = "Admin Panel";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="d-flex justify-content-between align-items-center mb-5 mt-2">
    <div>
        <h2 class="mb-1 display-6 fw-bold">Admin Dashboard</h2>
        <p class="text-muted mb-0">Overview and management of your clinic platform.</p>
    </div>
    @if (!string.IsNullOrEmpty(Model.ClinicName))
    {
        <div class="d-flex align-items-center bg-white px-4 py-2 rounded-4 shadow-sm border">
            <i class="bi bi-hospital text-primary fs-4 me-3"></i>
            <div>
                <div class="small text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Active Clinic</div>
                <div class="fw-bold fs-6 text-gradient">@Model.ClinicName</div>
            </div>
        </div>
    }
</div>

<div class="row g-4 mb-5">
    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stats-card-icon bg-gradient-primary me-3">
                    <i class="bi bi-people"></i>
                </div>
                <div>
                    <div class="text-muted small fw-semibold text-uppercase ls-1">Total Users</div>
                    <h3 class="mb-0 fw-bold">@Model.TotalUsers</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stats-card-icon bg-gradient-success me-3">
                    <i class="bi bi-heart-pulse"></i>
                </div>
                <div>
                    <div class="text-muted small fw-semibold text-uppercase ls-1">Doctors</div>
                    <h3 class="mb-0 fw-bold">@Model.DoctorCount</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stats-card-icon bg-gradient-info me-3">
                    <i class="bi bi-person-hearts"></i>
                </div>
                <div>
                    <div class="text-muted small fw-semibold text-uppercase ls-1">Patients</div>
                    <h3 class="mb-0 fw-bold">@Model.PatientCount</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stats-card-icon bg-gradient-warning me-3">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <div>
                    <div class="text-muted small fw-semibold text-uppercase ls-1">Admins</div>
                    <h3 class="mb-0 fw-bold">@Model.AdminCount</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-4 fw-bold text-dark"><i class="bi bi-grid-1x2-fill me-2 text-primary"></i>Management Console</h4>

<div class="row g-4">
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 position-relative overflow-hidden">
            <div class="card-body d-flex flex-column p-4">
                <div class="mb-3 text-primary">
                    <i class="bi bi-person-gear fs-1"></i>
                </div>
                <h5 class="card-title fw-bold">Users & Roles</h5>
                <p class="card-text text-muted mb-4 small">Manage user accounts, reset passwords, lock/unlock users and assign system roles.</p>
                <div class="mt-auto d-flex gap-2">
                    <a asp-page="/Administrator/Users/Index" class="btn btn-primary w-100">Manage Users</a>
                    <a asp-page="/Administrator/Users/Create" class="btn btn-light" title="Quick Add"><i class="bi bi-plus-lg"></i></a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column p-4">
                <div class="mb-3 text-info">
                    <i class="bi bi-graph-up-arrow fs-1"></i>
                </div>
                <h5 class="card-title fw-bold">System Overview</h5>
                <p class="card-text text-muted mb-4 small">Detailed breakdown of role distribution and clinic statistics.</p>
                <div class="mt-auto">
                    <a asp-page="/Administrator/Overview/Index" class="btn btn-outline-primary w-100">View Analytics</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column p-4">
                <div class="mb-3 text-warning">
                    <i class="bi bi-sliders fs-1"></i>
                </div>
                <h5 class="card-title fw-bold">Platform Settings</h5>
                <p class="card-text text-muted mb-4 small">Configure SMTP email server, clinic branding, logo, and upload limits.</p>
                <div class="mt-auto">
                    <a asp-page="/Administrator/Settings/Index" class="btn btn-outline-primary w-100">Configure</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column p-4">
                <div class="mb-3 text-danger">
                    <i class="bi bi-shield-check fs-1"></i>
                </div>
                <h5 class="card-title fw-bold">Security Audit</h5>
                <p class="card-text text-muted mb-4 small">Track user logins and security events within the platform.</p>
                <div class="mt-auto">
                    <a asp-page="/Administrator/Audit" class="btn btn-outline-primary w-100">View Logs</a>
                </div>
            </div>
        </div>
    </div>

</div>