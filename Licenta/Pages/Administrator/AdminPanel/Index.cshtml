@page
@model Licenta.Pages.Administrator.AdminPanel.IndexModel

@{
    ViewData["Title"] = "Admin Panel";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<h2 class="mb-3">Admin Panel</h2>

@if (!string.IsNullOrEmpty(Model.ClinicName))
{
    <div class="alert alert-light border mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Clinic / Platform:</div>
                <div class="fs-5">@Model.ClinicName</div>
                @if (Model.MaxUploadMb > 0)
                {
                    <div class="small text-muted">
                        Max upload size: @Model.MaxUploadMb MB
                    </div>
                }
            </div>
            <div>
                <a asp-page="/Administrator/Settings/Index" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-gear-wide-connected me-1"></i> Edit system settings
                </a>
            </div>
        </div>
    </div>
}

<div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-muted small">Total users</div>
                    <div class="fs-3 fw-semibold">@Model.TotalUsers</div>
                </div>
                <div class="rounded-circle bg-light p-2">
                    <i class="bi bi-people fs-4"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-muted small">Administrators</div>
                    <div class="fs-3 fw-semibold">@Model.AdminCount</div>
                </div>
                <div class="rounded-circle bg-light p-2">
                    <i class="bi bi-shield-lock fs-4"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-muted small">Doctors</div>
                    <div class="fs-3 fw-semibold">@Model.DoctorCount</div>
                </div>
                <div class="rounded-circle bg-light p-2">
                    <i class="bi bi-stethoscope fs-4"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-muted small">Patients</div>
                    <div class="fs-3 fw-semibold">@Model.PatientCount</div>
                </div>
                <div class="rounded-circle bg-light p-2">
                    <i class="bi bi-person-hearts fs-4"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.AssistantCount > 0)
{
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Assistants</div>
                        <div class="fs-3 fw-semibold">@Model.AssistantCount</div>
                    </div>
                    <div class="rounded-circle bg-light p-2">
                        <i class="bi bi-person-workspace fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<h4 class="mt-4 mb-3">Management</h4>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-people me-2"></i> Users &amp; Roles
                    </h5>
                    <span class="badge bg-primary-subtle text-primary border">
                        @Model.TotalUsers users
                    </span>
                </div>
                <p class="card-text text-muted">
                    Create, edit, block/unblock users, reset passwords and manage roles
                    (Administrator / Doctor / Assistant / Patient).
                </p>
                <div class="mt-auto d-flex flex-wrap gap-2">
                    <a asp-page="/Administrator/Users/Index" class="btn btn-primary btn-sm">
                        Open Users &amp; Roles
                    </a>
                    <a asp-page="/Administrator/Users/Create" class="btn btn-outline-secondary btn-sm">
                        Create new user
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-speedometer2 me-2"></i> Overview &amp; Statistics
                    </h5>
                    <span class="badge bg-secondary-subtle border">
                        Roles distribution
                    </span>
                </div>
                <p class="card-text text-muted">
                    View high-level statistics about users and roles in the system.
                </p>
                <div class="mt-auto">
                    <a asp-page="/Administrator/Overview/Index" class="btn btn-outline-primary btn-sm">
                        Open Overview
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-gear-wide-connected me-2"></i> System Settings
                    </h5>
                    <span class="badge bg-warning-subtle text-warning border">
                        Configuration
                    </span>
                </div>
                <p class="card-text text-muted">
                    Configure clinic information, logo, upload limits, SMTP settings and password policy.
                </p>
                <div class="mt-auto">
                    <a asp-page="/Administrator/Settings/Index" class="btn btn-outline-primary btn-sm">
                        Open System Settings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clipboard-data me-2"></i> Audit Log
                    </h5>
                    <span class="badge bg-info-subtle text-info border">
                        Security
                    </span>
                </div>
                <p class="card-text text-muted">
                    See recent login events for users (who entered the system and when).
                </p>
                <div class="mt-auto">
                    <a asp-page="/Administrator/Audit" class="btn btn-outline-primary btn-sm">
                        Open Audit Log
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
