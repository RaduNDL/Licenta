@page
@model Licenta.Pages.Administrator.Messages.CreateModel
@{
    ViewData["Title"] = "New message";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
<h2>New message</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.RecipientId" class="form-label"></label>
        <select asp-for="Input.RecipientId" asp-items="Model.Recipients" class="form-select"></select>
        <span asp-validation-for="Input.RecipientId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Subject" class="form-label"></label>
        <input asp-for="Input.Subject" class="form-control" />
        <span asp-validation-for="Input.Subject" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Body" class="form-label"></label>
        <textarea asp-for="Input.Body" rows="6" class="form-control"></textarea>
        <span asp-validation-for="Input.Body" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send</button>
    <a asp-page="/Administrator/Messages/Inbox" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
