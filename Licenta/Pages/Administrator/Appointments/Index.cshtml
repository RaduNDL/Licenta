@page
@model Licenta.Pages.Admin.Appointments.IndexModel
@{
    ViewData["Title"] = "Manage Appointments";
}

<h2>Manage Appointments</h2>

<p>
    <a asp-page="./Create" class="btn btn-primary btn-sm">New Appointment</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Doctor</th>
            <th>Patient</th>
            <th>Reason</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Appointments)
        {
            <tr>
                <td>@a.ScheduledAt.ToLocalTime().ToString("g")</td>
                <td>@a.Doctor.User.FullName</td>
                <td>@a.Patient.User.FullName</td>
                <td>@a.Reason</td>
                <td>@a.Status</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@a.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
