@page
@model Licenta.Pages.Administrator.AdminProfile.IndexModel
@{
    ViewData["Title"] = "Admin Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/adminprofile.css" asp-append-version="true" />
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-0">Administrator Profile</h3>
            <div class="text-muted">Manage your account details.</div>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Administrator/Overview/Index">Back</a>
    </div>

    @if (TempData["StatusMessage"] is string status)
    {
        <div class="alert alert-info border-0 shadow-sm">@status</div>
    }

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="rounded-circle bg-danger-subtle d-flex align-items-center justify-content-center" style="width:56px;height:56px;">
                            <i class="bi bi-shield-lock text-danger fs-4"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">@Model.FullName</div>
                            <div class="text-muted small">@Model.Email</div>
                        </div>
                    </div>

                    <hr />

                    <div class="small text-muted mb-1">Role</div>
                    <div class="fw-semibold">Administrator</div>

                    @if (!string.IsNullOrWhiteSpace(Model.ClinicName))
                    {
                        <div class="small text-muted mt-3 mb-1">Clinic</div>
                        <div class="fw-semibold">@Model.ClinicName</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">Account</h5>

                    <form method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Input.FullName" class="form-label"></label>
                                <input asp-for="Input.FullName" class="form-control" />
                                <span asp-validation-for="Input.FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input class="form-control" value="@Model.Email" disabled />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Username</label>
                                <input class="form-control" value="@Model.UserName" disabled />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button class="btn btn-danger">
                                <i class="bi bi-save me-1"></i> Save changes
                            </button>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="fw-semibold">Security</div>
                            <div class="text-muted small">Change password from Identity settings.</div>
                        </div>
                        <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                            <i class="bi bi-key me-1"></i> Change password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
