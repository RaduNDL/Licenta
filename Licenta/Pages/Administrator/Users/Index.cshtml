@page
@model Licenta.Pages.Administrator.Users.IndexModel
@{
    ViewData["Title"] = "Users & Roles";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
<h2 class="mb-3">Users & Roles</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-primary" asp-page="/Administrator/Users/Create">Create user</a>
    </div>

    <div class="d-flex align-items-center gap-2">
        <form method="post" asp-page-handler="Export" class="mb-0">
            <button type="submit" class="btn btn-outline-success">
                Export users 
            </button>
        </form>

        @if (TempData["StatusMessage"] is string msg)
        {
            <div class="alert alert-info mb-0 py-1 px-2">@msg</div>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 15%">ClinicID</th>
                <th style="width: 20%">Full name</th>
                <th style="width: 25%">Email</th>
                <th style="width: 25%">Roles</th>
                <th style="width: 15%">Status</th>
                <th class="text-end" style="width: 25%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model.Users)
            {
                var roles = Model.RolesByUserId.TryGetValue(u.Id, out var rlist) ? rlist : new List<string>();
                var isDoctor = roles.Contains("Doctor");
                var isAdmin = roles.Contains("Administrator");
                var isSelf = string.Equals(u.Id, Model.CurrentUserId, StringComparison.Ordinal);
                var isLocked = u.LockoutEnd.HasValue && u.LockoutEnd > DateTimeOffset.UtcNow;

                <tr>
                    <td>@(u.ClinicId ?? "-")</td>

                    <td>@(u.FullName ?? "(no name)")</td>

                    
                    <td class="text-truncate">
                        @((u.Email ?? u.UserName) ?? "(no email)")
                    </td>

                    <td>
                        @if (roles.Count == 0)
                        {
                            <span class="badge bg-secondary-subtle border">no role</span>
                        }
                        else
                        {
                            foreach (var r in roles)
                            {
                                <span class="badge bg-primary me-1">@r</span>
                            }
                        }
                    </td>

                    <td>
                        @if (isLocked)
                        {
                            <span class="badge bg-danger">Blocked</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>

                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary me-1"
                           asp-page="Edit"
                           asp-route-id="@u.Id">
                            Edit
                        </a>

                        <a class="btn btn-sm btn-warning me-1"
                           asp-page="ResetPassword"
                           asp-route-id="@u.Id">
                            Reset password
                        </a>

                        <a class="btn btn-sm btn-primary me-1"
                           asp-page="AssignRoles"
                           asp-route-id="@u.Id">
                            Assign roles
                        </a>

                        <a class="btn btn-sm btn-outline-danger me-2"
                           asp-page="DeleteUser"
                           asp-route-id="@u.Id">
                            Delete
                        </a>

                        @if (isSelf)
                        {
                            <span class="text-muted">Your account</span>
                        }
                        else
                        {
                            <form method="post"
                                  asp-page-handler="ToggleLock"
                                  asp-route-id="@u.Id"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm @(isLocked ? "btn-success" : "btn-outline-danger")"
                                        title="@(isLocked ? "Unblock" : "Block") user">
                                    @(isLocked ? "Unblock" : "Block")
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
