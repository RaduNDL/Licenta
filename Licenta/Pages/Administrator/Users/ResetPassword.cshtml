@page "{id}"
@model Licenta.Pages.Administrator.Users.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
<h2 class="mb-3">Reset Password</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <h5>User: @Model.TargetEmail</h5>
        <p class="text-muted">User ID: @Model.UserId</p>

        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        @if (Model.SuccessMessage != null)
        {
            <div class="alert alert-success">@Model.SuccessMessage</div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                <input asp-for="NewPassword" class="form-control" type="password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button class="btn btn-primary">Reset Password</button>
            <a class="btn btn-outline-secondary ms-2" asp-page="./Index">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
