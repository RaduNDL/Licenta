@page
@model Licenta.Pages.Administrator.AuditModel
@{
    ViewData["Title"] = "Security Audit";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="container-fluid p-0">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1 text-gradient">
                <i class="bi bi-shield-lock-fill me-2"></i>Security Audit Logs
            </h2>
            <p class="text-muted mb-0">Monitor user access and system security events.</p>
        </div>
        <div>
            <span class="badge bg-primary-subtle text-primary border border-primary-subtle px-3 py-2 rounded-pill">
                <i class="bi bi-activity me-2"></i>@Model.Logins.Count Events
            </span>
        </div>
    </div>

    @if (!Model.Logins.Any())
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                    <i class="bi bi-shield-check fs-1 text-muted"></i>
                </div>
                <h5 class="text-muted">No security events found</h5>
                <p class="text-muted small">System logs are clean.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body p-2">
                <div class="row align-items-center g-2">
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 ps-3">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input id="searchInput" class="form-control border-0 bg-transparent shadow-none"
                                   type="search" placeholder="Search by username, date or time..."
                                   aria-label="Search logins" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <form method="post" asp-page-handler="Export" class="d-inline">
                            <button type="submit" class="btn btn-primary w-100 w-md-auto">
                                <i class="bi bi-file-earmark-excel me-2"></i>Export CSV
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="auditTable" class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4" style="width: 40%;">Timestamp</th>
                                <th class="ps-4">User Identity</th>
                                <th class="text-end pe-4">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in Model.Logins)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3 text-primary">
                                                <i class="bi bi-clock"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@e.Timestamp.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                                <div class="small text-muted font-monospace">@e.Timestamp.ToLocalTime().ToString("HH:mm:ss")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                @e.UserName.Substring(0, 1).ToUpper()
                                            </div>
                                            <span class="fw-medium text-dark">@e.UserName</span>
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <span class="badge bg-success-subtle text-success rounded-pill">
                                            <i class="bi bi-check-circle-fill me-1"></i> Login Success
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-center">
            <small class="text-muted">Showing all @Model.Logins.Count records. Real-time logging enabled.</small>
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            const input = document.getElementById('searchInput');
            const table = document.getElementById('auditTable');
            if (!input || !table) return;

            const rows = Array.from(table.querySelectorAll('tbody tr'));

            function filter() {
                const q = input.value.trim().toLowerCase();
                if (!q) {
                    rows.forEach(r => r.style.display = '');
                    return;
                }
                rows.forEach(r => {
                    const timeText = (r.cells[0]?.innerText || '').toLowerCase();
                    const userText = (r.cells[1]?.innerText || '').toLowerCase();
                    r.style.display = (timeText.includes(q) || userText.includes(q)) ? '' : 'none';
                });
            }

            let t = null;
            input.addEventListener('input', () => {
                clearTimeout(t);
                t = setTimeout(filter, 150); 
            });
        })();
    </script>
}