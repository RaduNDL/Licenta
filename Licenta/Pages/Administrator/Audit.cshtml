@page
@model Licenta.Pages.Administrator.AuditModel
@{
    ViewData["Title"] = "Security Audit";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1 text-gradient">
                <i class="bi bi-shield-lock-fill me-2"></i>Security Audit Logs
            </h2>
            <p class="text-muted mb-0">Monitor user access and system security events.</p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <span id="eventsBadge" class="badge bg-primary-subtle text-primary border border-primary-subtle px-3 py-2 rounded-pill">
                <i class="bi bi-activity me-2"></i><span id="eventsCount">@Model.Logins.Count</span> Events
            </span>
            <form method="post" asp-page-handler="Export" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-file-earmark-excel me-2"></i>Export CSV
                </button>
            </form>
        </div>
    </div>

    <div id="emptyState" style="@(Model.Logins.Any() ? "display:none;" : "")">
        <div class="card text-center py-5">
            <div class="card-body">
                <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                    <i class="bi bi-shield-check fs-1 text-muted"></i>
                </div>
                <h5 class="text-muted">No security events found</h5>
                <p class="text-muted small">System logs are clean.</p>
            </div>
        </div>
    </div>

    <div id="auditContent" style="@(!Model.Logins.Any() ? "display:none;" : "")">
        <div class="card mb-4">
            <div class="card-body p-2">
                <div class="row align-items-center g-2">
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 ps-3">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input id="searchInput" class="form-control border-0 bg-transparent shadow-none"
                                   type="search" placeholder="Search by username, date or time..."
                                   aria-label="Search logins" autocomplete="off" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="auditTable" class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4" style="width: 40%;">Timestamp</th>
                                <th class="ps-4">User Identity</th>
                                <th class="ps-4">IP</th>
                                <th class="text-end pe-4">Scheme</th>
                            </tr>
                        </thead>
                        <tbody id="auditTbody">
                            @foreach (var e in Model.Logins)
                            {
                                var local = Model.ToRomaniaLocal(e.TimestampUtc);

                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3 text-primary">
                                                <i class="bi bi-clock"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@local.ToString("MMM dd, yyyy")</div>
                                                <div class="small text-muted font-monospace">@local.ToString("HH:mm:ss")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                @(string.IsNullOrEmpty(e.UserName) ? "?" : e.UserName.Substring(0, 1).ToUpper())
                                            </div>
                                            <span class="fw-medium text-dark ms-2">@e.UserName</span>
                                        </div>
                                    </td>
                                    <td class="ps-4">
                                        <span class="text-muted font-monospace">@e.RemoteIp</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <span class="badge bg-light text-secondary border">@e.Scheme</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-center">
            <small class="text-muted">Showing all <span id="recordsCount">@Model.Logins.Count</span> records.</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/Audit.js" asp-append-version="true"></script>
}
