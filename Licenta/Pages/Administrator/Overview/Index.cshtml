@page
@model Licenta.Pages.Administrator.Overview.IndexModel
@{
    ViewData["Title"] = "Admin Overview";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}
<link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />

<h2 class="mb-3">Admin Overview</h2>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="display-6 mb-0">@Model.TotalUsers</p>
                <small class="text-muted">total accounts</small>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Roles</h5>
                <p class="display-6 mb-0">@Model.TotalRoles</p>
                <small class="text-muted">defined roles</small>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Users per Role</h5>
        @if (Model.UsersPerRole?.Any() == true)
        {
            <table class="table table-sm table-striped align-middle">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th class="text-end">Users</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kv in Model.UsersPerRole.OrderByDescending(k => k.Value))
                    {
                        <tr>
                            <td>@kv.Key</td>
                            <td class="text-end">@kv.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted mb-0">No roles found.</p>
        }
    </div>
</div>
