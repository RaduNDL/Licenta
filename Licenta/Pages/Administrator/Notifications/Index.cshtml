@page
@using Licenta.Models
@model Licenta.Pages.Administrator.Notifications.IndexModel

@{
    ViewData["Title"] = "Notifications";
}

<h2>Notifications</h2>

@if (!Model.Items.Any())
{
    <p>You have no notifications in the last 30 days.</p>
}
else
{
    <form method="post" asp-page-handler="MarkAllRead" class="mb-2">
        <button type="submit" class="btn btn-sm btn-secondary">Mark all as read</button>
    </form>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Title</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var n in Model.Items)
            {
                <tr class="@(n.IsRead ? "" : "table-info")">
                    <td>@n.When.ToString("g")</td>
                    <td>@n.Type</td>
                    <td>@n.Title</td>
                    <td>@Html.Raw(n.Message)</td>
                </tr>
            }
        </tbody>
    </table>
}