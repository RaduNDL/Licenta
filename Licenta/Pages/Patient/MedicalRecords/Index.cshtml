@page
@using Licenta.Models
@model Licenta.Pages.Patient.MedicalRecords.IndexModel

@{
    ViewData["Title"] = "My Medical Records";
}

<h2 class="mb-4">My Medical Records</h2>

@if (!Model.Records.Any())
{
    <div class="alert alert-info">No medical records available.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Date</th>
                <th>Doctor</th>
                <th>Diagnosis</th>
                <th>Status</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Records)
            {
                <tr>
                    <td>@r.VisitDateUtc.ToLocalTime().ToString("g")</td>
                    <td>@(r.Doctor?.User?.FullName ?? r.Doctor?.User?.Email ?? "Doctor")</td>
                    <td>@(string.IsNullOrWhiteSpace(r.Diagnosis) ? "-" : r.Diagnosis)</td>
                    <td>@r.Status</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-page="/Patient/MedicalRecords/Details"
                           asp-route-id="@r.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
