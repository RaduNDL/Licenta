@page
@using Licenta.Models
@model Licenta.Pages.Patient.Appointments.IndexModel
@{
    ViewData["Title"] = "My Appointments";
}
@section Styles {
    <link rel="stylesheet" href="~/css/patient.css" />
}

<h2>My Appointment Requests</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-secondary">You have no appointment requests yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>File</th>
                <th>Doctor</th>
                <th>Uploaded</th>
                <th>Status</th>
                <th>Validated</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Items)
            {
                <tr>
                    <td>@a.FileName</td>
                    <td>@(a.DoctorUserFullName ?? "-")</td>
                    <td>@a.UploadedAt.ToLocalTime().ToString("g")</td>
                    <td>
                        @if (a.Status == AttachmentStatus.Validated)
                        {
                            <span class="badge bg-success">Accepted</span>
                        }
                        else if (a.Status == AttachmentStatus.Rejected)
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pending</span>
                        }
                    </td>
                    <td>@(a.ValidatedAtUtc?.ToLocalTime().ToString("g") ?? "-")</td>
                    <td>@(string.IsNullOrWhiteSpace(a.ValidationNotes) ? "-" : a.ValidationNotes)</td>
                    <td><a class="btn btn-sm btn-primary" href="@a.FilePath" target="_blank">Open</a></td>
                </tr>
            }
        </tbody>
    </table>
}
