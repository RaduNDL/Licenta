@page
@model Licenta.Pages.Patient.Messages.RequestListModel
@{
    ViewData["Title"] = "Message requests";
}

@section Styles {
    <link rel="stylesheet" href="~/css/patient.css" />
}

<h2 class="mb-3">Message requests</h2>

@if (TempData["MessageRequestSuccess"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

<div class="mb-3">
    <a class="btn btn-primary btn-sm" asp-page="/Patient/Messages/CreateRequest">
        New request
    </a>
</div>

@if (!Model.Requests.Any())
{
    <div class="alert alert-secondary">No message requests yet.</div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Doctor</th>
                <th>Subject</th>
                <th>Created</th>
                <th>Status</th>
                <th>Admin note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Requests)
            {
                <tr>
                    <td>@(r.Doctor.FullName ?? r.Doctor.UserName)</td>
                    <td>@r.Subject</td>
                    <td>@r.CreatedAt.ToLocalTime().ToString("g")</td>
                    <td>@r.Status.ToString()</td>
                    <td>@r.AdminNote</td>
                </tr>
            }
        </tbody>
    </table>
}
