@page
@model Licenta.Pages.Patient.Notifications.IndexModel
@{
    ViewData["Title"] = "Notifications";
}
@section Styles {
    <link rel="stylesheet" href="~/css/patient.css" />
}
<h2>Notifications</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-secondary">No recent notifications.</div>
}
else
{
    <ul class="list-group">
        @foreach (var n in Model.Items)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">@n.Title</div>
                    <div class="text-muted small">@n.Message</div>
                </div>
                <span class="badge bg-secondary">@n.When.ToLocalTime().ToString("g")</span>
            </li>
        }
    </ul>
}
