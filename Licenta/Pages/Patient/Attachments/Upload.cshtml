@page
@model Licenta.Pages.Patient.Attachments.UploadModel
@{
    ViewData["Title"] = "Upload Medical Images";
}
@section Styles {
    <link rel="stylesheet" href="~/css/patient.css" />
}
<h2>Upload Medical Images</h2>

@if (TempData["StatusMessage"] is string msg)
{
    <div class="alert alert-info">@msg</div>
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Input.DoctorId" class="form-label">Doctor</label>
        <select asp-for="Input.DoctorId" class="form-select" asp-items="Model.Doctors"></select>
        <span class="text-muted d-block mt-1">Choose the doctor who should review your images.</span>
    </div>

    <div class="mb-3">
        <label asp-for="Files" class="form-label">Images (JPG/PNG, max 10MB each)</label>
        <input asp-for="Files" type="file" class="form-control" multiple accept=".jpg,.jpeg,.png" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.Notes" class="form-label">Notes (optional)</label>
        <textarea asp-for="Input.Notes" class="form-control" rows="3" placeholder="Describe the wound/rash, onset, pain, etc."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>
