@page
@model Licenta.Pages.Patient.Attachments.ValidatedModel
@{
    ViewData["Title"] = "Validated Documents";
}
@section Styles {
    <link rel="stylesheet" href="~/css/patient.css" />
}
<h2>Validated Documents</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-secondary">You have no validated documents yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>File</th>
                <th>Type</th>
                <th>Validated At</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Items)
            {
                <tr>
                    <td>@a.FileName</td>
                    <td>@a.Type</td>
                    <td>@(a.ValidatedAtUtc?.ToLocalTime().ToString("g") ?? "-")</td>
                    <td>@(string.IsNullOrWhiteSpace(a.ValidationNotes) ? "-" : a.ValidationNotes)</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@a.FilePath" target="_blank">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
