@page
@model Licenta.Pages.Patient.Attachments.ValidatedModel
@{
    ViewData["Title"] = "Reviewed Documents";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4"><i class="bi bi-check2-circle text-success me-2"></i>Reviewed Documents</h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info border-0 shadow-sm">
            <i class="bi bi-info-circle me-2"></i>You have no reviewed documents yet.
        </div>
    }
    else
    {
        <div class="table-responsive card shadow-sm border-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">File Name</th>
                        <th>Type</th>
                        <th>Reviewed By</th>
                        <th>Review Date</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.FileName</td>
                            <td>@item.Type</td>
                            <td>Dr. @(item.Doctor?.User?.FullName ?? "-")</td>
                            <td>@(item.ValidatedAtUtc?.ToLocalTime().ToString("g") ?? "-")</td>
                            <td class="text-end pe-4">
                                <a asp-page="/Patient/Attachments/Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>