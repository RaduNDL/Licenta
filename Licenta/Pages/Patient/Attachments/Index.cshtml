@page
@model Licenta.Pages.Patient.Attachments.IndexModel
@{
    ViewData["Title"] = "My Attachments";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1"><i class="bi bi-folder2-open text-primary me-2"></i>My Documents</h2>
            <p class="text-muted mb-0">Manage your medical files and test results.</p>
        </div>
        <a asp-page="/Patient/Attachments/Upload" class="btn btn-primary shadow-sm">
            <i class="bi bi-cloud-upload me-2"></i>Upload New
        </a>
    </div>

    @if (TempData["StatusMessage"] is string status)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4">
            <i class="bi bi-check-circle-fill me-2"></i>@status
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <div class="mb-3 text-muted opacity-50">
                <i class="bi bi-files display-1"></i>
            </div>
            <h4>No documents yet</h4>
            <p class="text-muted">Upload your first medical document to share it with your doctor.</p>
            <a asp-page="/Patient/Attachments/Upload" class="btn btn-outline-primary mt-2">Upload Now</a>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var item in Model.Items)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-start justify-content-between mb-3">
                                <div class="bg-light rounded p-3 text-center" style="width: 60px; height: 60px;">
                                    @if (item.FileName.EndsWith(".pdf"))
                                    {
                                        <i class="bi bi-file-earmark-pdf text-danger fs-3"></i>
                                    }
                                    else if (item.FileName.EndsWith(".jpg") || item.FileName.EndsWith(".png"))
                                    {

                                        <i class="bi bi-file-earmark-image text-primary fs-3"></i>
                                    }
                                    else
                                    {

                                        <i class="bi bi-file-earmark-text text-secondary fs-3"></i>
                                    }
                                </div>
                                <span class="badge @(item.Status == AttachmentStatus.Validated ? "bg-success" : (item.Status == AttachmentStatus.Rejected ? "bg-danger" : "bg-warning text-dark")) rounded-pill">
                                    @item.Status
                                </span>
                            </div>

                            <h5 class="card-title text-truncate" title="@item.FileName">@item.FileName</h5>
                            <div class="text-muted small mb-2">@item.Type</div>
                            <div class="text-muted small mb-3">
                                <i class="bi bi-calendar3 me-1"></i> @item.UploadedAt.ToLocalTime().ToString("MMM dd, yyyy")
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-page="/Patient/Attachments/Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>