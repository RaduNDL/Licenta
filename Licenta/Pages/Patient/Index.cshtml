@page
@model Licenta.Pages.Patient.IndexModel
@{
    ViewData["Title"] = "Patient Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/patient.css" asp-append-version="true" />
}

<div class="container-fluid dashboard-container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold text-dark">
                Welcome back, <span class="text-primary">@Model.PatientName</span>
            </h1>
            <p class="text-muted mb-0">Here is your health overview for @DateTime.Now.ToString("D")</p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0 d-flex justify-content-md-end gap-2">
            <a asp-page="/Patient/Appointments/Request" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>New Appointment
            </a>
            <a asp-page="/Patient/Appointments/Index" class="btn btn-outline-primary shadow-sm">
                <i class="bi bi-calendar3 me-2"></i>My Appointments
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-sm-6">
            <div class="stat-widget">
                <div class="stat-icon stat-blue"><i class="bi bi-calendar-event"></i></div>
                <div>
                    <h3 class="fw-bold mb-0">@Model.UpcomingAppointmentsCount</h3>
                    <p class="text-muted small mb-0">Upcoming Visits</p>
                </div>
                <a asp-page="/Patient/Appointments/Index" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="stat-widget">
                <div class="stat-icon stat-green"><i class="bi bi-clipboard-data"></i></div>
                <div>
                    <h3 class="fw-bold mb-0">@Model.NewResultsCount</h3>
                    <p class="text-muted small mb-0">New Results</p>
                </div>
                <a asp-page="/Patient/Attachments/Index" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="stat-widget">
                <div class="stat-icon stat-purple"><i class="bi bi-envelope"></i></div>
                <div>
                    <h3 class="fw-bold mb-0">@Model.UnreadMessagesCount</h3>
                    <p class="text-muted small mb-0">Unread Messages</p>
                </div>
                <a asp-page="/Patient/Messages/Inbox" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="stat-widget">
                <div class="stat-icon stat-orange"><i class="bi bi-arrow-repeat"></i></div>
                <div>
                    <h3 class="fw-bold mb-0">@Model.ActiveRescheduleRequestsCount</h3>
                    <p class="text-muted small mb-0">Active Reschedules</p>
                </div>
                <a asp-page="/Patient/Appointments/Index" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="dashboard-card mb-4">
                <div class="card-header-custom">
                    <span><i class="bi bi-calendar-week me-2 text-primary"></i>Next Appointment</span>
                    <a asp-page="/Patient/Appointments/Index" class="btn btn-sm btn-light rounded-pill">View Calendar</a>
                </div>
                <div class="card-body p-4">
                    @if (Model.NextAppointment != null)
                    {
                        <div class="d-flex align-items-center border rounded p-3 bg-light">
                            <div class="bg-white text-primary rounded p-3 text-center shadow-sm me-3" style="min-width: 90px;">
                                <div class="h3 fw-bold mb-0">@Model.NextAppointment.Date.Day</div>
                                <div class="small fw-bold text-uppercase">@Model.NextAppointment.Date.ToString("MMM")</div>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-1">@Model.NextAppointment.DoctorName</h5>
                                <div class="d-flex flex-wrap gap-3 text-muted small">
                                    <span><i class="bi bi-clock me-1"></i>@Model.NextAppointment.Time</span>
                                    <span><i class="bi bi-geo-alt me-1"></i>Main Clinic</span>
                                </div>
                                @if (Model.NextAppointment.CanReschedule)
                                {
                                    <div class="mt-2">
                                        <a asp-page="/Patient/Appointments/Reschedule" asp-route-id="@Model.NextAppointment.AppointmentId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-arrow-repeat me-1"></i>Request Reschedule
                                        </a>
                                    </div>
                                }
                            </div>
                            <span class="badge bg-success rounded-pill px-3 py-2">Confirmed</span>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <div class="mb-3 text-muted opacity-25">
                                <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
                            </div>
                            <p class="text-muted">No upcoming appointments scheduled.</p>
                            <a asp-page="/Patient/Appointments/Request" class="btn btn-sm btn-outline-primary">Book Now</a>
                        </div>
                    }
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-header-custom">
                    <span><i class="bi bi-activity me-2 text-success"></i>Health Timeline</span>
                    <small class="text-muted">Last 7 days</small>
                </div>
                <div class="card-body p-4">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        <div class="timeline-wrapper">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-dot"></div>
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="fw-semibold text-dark">@activity.Title</span>
                                        <small class="text-muted">@activity.TimeAgo</small>
                                    </div>
                                    <p class="text-muted small mb-0">@activity.Description</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted small">No recent activity recorded.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="dashboard-card mb-4">
                <div class="card-header-custom">
                    <span>Quick Actions</span>
                </div>
                <div class="card-body p-3">
                    <div class="row g-2">
                        <div class="col-6">
                            <a asp-page="/Patient/Attachments/Upload" class="quick-action-btn">
                                <i class="bi bi-cloud-arrow-up text-primary"></i>
                                <span class="small fw-semibold">Upload File</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-page="/Patient/Form/PreConsultation" class="quick-action-btn">
                                <i class="bi bi-clipboard-pulse text-success"></i>
                                <span class="small fw-semibold">Pre-Consult</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-page="/Patient/MedicalRecords/Index" class="quick-action-btn">
                                <i class="bi bi-file-earmark-medical text-danger"></i>
                                <span class="small fw-semibold">Records</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-page="/Patient/Predictions/Index" class="quick-action-btn">
                                <i class="bi bi-cpu text-purple"></i>
                                <span class="small fw-semibold">AI Analysis</span>
                            </a>
                        </div>
                        <div class="col-12">
                            <a asp-page="/Patient/Appointments/Index" class="quick-action-btn">
                                <i class="bi bi-calendar3 text-primary"></i>
                                <span class="small fw-semibold">Appointments & Reschedules</span>
                                @if (Model.ActiveRescheduleRequestsCount > 0)
                                {
                                    <span class="badge bg-danger ms-2">@Model.ActiveRescheduleRequestsCount</span>
                                }
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="dashboard-card h-auto">
                <div class="card-header-custom">
                    <span><i class="bi bi-bell-fill me-2 text-warning"></i>Notifications</span>
                    <a asp-page="/Patient/Notifications/Index" class="btn-see-all">See All</a>
                </div>
                <div class="card-body p-0">
                    <div class="notification-feed">
                        @if (Model.RecentNotifications != null && Model.RecentNotifications.Any())
                        {
                            @foreach (var note in Model.RecentNotifications.Take(4))
                            {
                                <div class="notification-item">
                                    <div class="notif-icon-box">
                                        <i class="bi bi-info-lg"></i>
                                    </div>
                                    <div class="notif-content">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <h6 class="notif-title">@note.Title</h6>
                                            <span class="notif-time">@note.TimeAgo</span>
                                        </div>
                                        <p class="notif-message">@note.Message</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-notif-state">
                                <i class="bi bi-bell-slash"></i>
                                <p>All caught up!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
