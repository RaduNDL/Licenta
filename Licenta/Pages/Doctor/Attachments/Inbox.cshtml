@page
@model Licenta.Pages.Doctor.Attachments.InboxModel
@{
    ViewData["Title"] = "Inbox";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold"><i class="bi bi-inbox text-primary me-2"></i>Incoming Documents</h2>
    </div>

    @if (TempData["StatusMessage"] is string status)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4"><i class="bi bi-check-circle me-2"></i>@status</div>
    }

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-check2-all display-1"></i>
            <h4 class="mt-3">All caught up!</h4>
            <p>No pending documents requiring your attention.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">File</th>
                            <th>Patient</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            bool isMine = item.DoctorId == Model.CurrentDoctorId;
                            <tr class="@(isMine ? "bg-white" : "bg-light bg-opacity-50")">
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.FileName</div>
                                    <div class="small text-muted">@item.Type</div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-2">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@(item.Patient?.User?.FullName ?? "Unknown")</div>
                                            <div class="small text-muted">Patient</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.UploadedAt.ToLocalTime().ToString("g")</td>
                                <td>
                                    @if (item.DoctorId == null)
                                    {
                                        <span class="badge bg-secondary">Unassigned</span>
                                    }
                                    else if (isMine)
                                    {
                                        <span class="badge bg-primary">Assigned to You</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark">Assigned to Colleague</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a href="@item.FilePath" target="_blank" class="btn btn-sm btn-outline-secondary" title="Download">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        @if (item.DoctorId == null)
                                        {
                                            <form method="post" asp-page-handler="Claim" asp-route-id="@item.Id" class="d-inline">
                                                <button class="btn btn-sm btn-outline-primary ms-1">
                                                    Claim <i class="bi bi-arrow-right"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (isMine)
                                        {
                                            <a asp-page="/Doctor/Attachments/Review" asp-route-id="@item.Id" class="btn btn-sm btn-primary ms-1">
                                                Review <i class="bi bi-pencil-square"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>