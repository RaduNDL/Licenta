@page
@model Licenta.Pages.Doctor.Schedule.IndexModel

@{
    ViewData["Title"] = "My Schedule";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/doctor.css" />
}

<h2 class="mb-3">My Schedule</h2>

@if (!string.IsNullOrEmpty(Model.DoctorName))
{
    <p class="text-muted">Doctor: <strong>@Model.DoctorName</strong></p>
}

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success">@TempData["StatusMessage"]</div>
}

<form method="post" class="card shadow-sm p-3">
    <p>Select the days and hours when you are available for appointments.</p>

    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th style="width: 10%;">Day</th>
                <th style="width: 10%;">Active</th>
                <th style="width: 20%;">Start</th>
                <th style="width: 20%;">End</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Days.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Days[i].DayName
                        <input type="hidden" asp-for="Days[@i].DayOfWeek" />
                        <input type="hidden" asp-for="Days[@i].DayName" />
                    </td>
                    <td>
                        <input class="form-check-input" asp-for="Days[@i].IsActive" />
                    </td>
                    <td>
                        <input class="form-control" asp-for="Days[@i].StartTime" type="time" />
                        <span asp-validation-for="Days[@i].StartTime" class="text-danger"></span>
                    </td>
                    <td>
                        <input class="form-control" asp-for="Days[@i].EndTime" type="time" />
                        <span asp-validation-for="Days[@i].EndTime" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div asp-validation-summary="All" class="text-danger mb-2"></div>

    <button type="submit" class="btn btn-primary">Save schedule</button>
    <a asp-page="/Doctor/Index" class="btn btn-outline-secondary ms-2">Back to dashboard</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
