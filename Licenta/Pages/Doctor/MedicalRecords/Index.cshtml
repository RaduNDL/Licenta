@page
@model Licenta.Pages.Doctor.MedicalRecords.IndexModel

@{
    ViewData["Title"] = "Medical Records";
}

@section Styles {
    <link rel="stylesheet" href="~/css/medicalrecords.css" />
}

<div class="page-container">
    <div class="page-header">
        <h2 class="page-title">
            <i class="bi bi-journal-medical text-primary"></i> Medical Records
        </h2>

        <div class="d-flex gap-2">
            <a asp-page="/Doctor/MedicalRecords/Create" class="btn btn-primary" asp-route-patientId="@Model.SelectedPatientId">
                <i class="bi bi-plus-lg me-2"></i>Create New Record
            </a>
        </div>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-warning border-0 shadow-sm mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["StatusMessage"]
        </div>
    }

    @if (Model.Records == null || !Model.Records.Any())
    {
        <div class="empty-state">
            <i class="bi bi-journal-x"></i>
            <h5>No Records Found</h5>
            <p>There are no medical records available to display.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th width="30%">Patient</th>
                        <th width="20%">Visit Date</th>
                        <th width="30%">Diagnosis</th>
                        <th width="10%">Status</th>
                        <th width="10%" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Records)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-2 me-2 text-primary">
                                        <i class="bi bi-person"></i>
                                    </div>
                                    <span class="fw-medium">
                                        @(r.Patient.User.FullName ?? r.Patient.User.Email)
                                    </span>
                                </div>
                            </td>
                            <td>@r.VisitDateUtc.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</td>
                            <td>@(string.IsNullOrWhiteSpace(r.Diagnosis) ? "-" : r.Diagnosis)</td>
                            <td>
                                <span class="status-badge @(r.Status.ToString().ToLower())">@r.Status</span>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-page="/Doctor/MedicalRecords/Details"
                                   asp-route-id="@r.Id">
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4 border-top pt-3">
        <a asp-page="/Doctor/Patients/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Patients
        </a>
    </div>
</div>