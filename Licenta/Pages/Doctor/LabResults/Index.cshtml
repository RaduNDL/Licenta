@page
@model Licenta.Pages.Doctor.LabResults.IndexModel
@{
    ViewData["Title"] = "Lab Results";
}

@section Styles {
    <link rel="stylesheet" href="~/css/labresults.css" />
}

<div class="page-container">
    <div class="page-header">
        <h2 class="page-title">
            <i class="bi bi-file-earmark-medical text-primary"></i> Lab Results
        </h2>
    </div>

    @if (TempData["StatusMessage"] is string msg)
    {
        <div class="alert alert-info border-0 shadow-sm mb-4">
            <i class="bi bi-info-circle me-2"></i>@msg
        </div>
    }

    @if (!Model.Results.Any())
    {
        <div class="empty-state">
            <i class="bi bi-folder2-open"></i>
            <h5>No Lab Results Found</h5>
            <p>There are no lab results available for your patients.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th width="25%">Patient</th>
                        <th width="20%">Uploaded Date</th>
                        <th width="25%">File Name</th>
                        <th width="15%">Status</th>
                        <th width="15%" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Results)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-2 me-2 text-primary">
                                        <i class="bi bi-person"></i>
                                    </div>
                                    <span class="fw-medium">
                                        @(r.Patient?.User?.FullName ?? r.Patient?.User?.Email ?? "Unknown")
                                    </span>
                                </div>
                            </td>
                            <td>@r.UploadedAt.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</td>
                            <td>
                                <span class="file-link">
                                    <i class="bi bi-file-text"></i> @r.FileName
                                </span>
                            </td>
                            <td>
                                <span class="status-badge @(r.Status.ToString().ToLower())">
                                    @r.Status
                                </span>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-primary"
                                   asp-page="/Doctor/LabResults/Analyze"
                                   asp-route-id="@r.Id">
                                    <i class="bi bi-cpu me-1"></i> Analyze
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4 border-top pt-3">
        <a asp-page="/Doctor/Patients/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Patients
        </a>
    </div>
</div>
