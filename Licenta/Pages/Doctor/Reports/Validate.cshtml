@page
@model Licenta.Pages.Doctor.Reports.ValidateModel
@{
    ViewData["Title"] = "Validate Reports";
}
@section Styles {
    <link rel="stylesheet" href="~/css/doctor.css" />
}
<h2 class="mb-3">Pending Reports for Validation</h2>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info">@TempData["StatusMessage"]</div>
}

@if (Model.Pending == null || Model.Pending.Count == 0)
{
    <div class="alert alert-secondary">There are no reports pending validation.</div>
}
else
{
    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Patient</th>
                <th>Diagnosis</th>
                <th>Date</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Pending)
            {
                <tr>
                    <td>@(r.Patient?.User?.FullName ?? r.Patient?.User?.Email)</td>
                    <td>@r.Diagnosis</td>
                    <td>@r.VisitDateUtc.ToLocalTime().ToString("g")</td>
                    <td class="text-end">
                        <form method="post" class="d-inline">
                            <input type="hidden" name="recordId" value="@r.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-check-circle"></i> Validate
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
