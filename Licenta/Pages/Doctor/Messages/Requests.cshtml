@page
@model Licenta.Pages.Doctor.Messages.RequestsModel

@{
    ViewData["Title"] = "Doctor Requests";
}

@section Styles {
    <link rel="stylesheet" href="~/css/doctormessages.css" />
}

<div class="page-container">

    <div class="page-header">
        <h2>
            <i class="bi bi-envelope-exclamation text-primary"></i>
            Pending Requests
        </h2>

        <a asp-page="/Doctor/Messages/Inbox"
           class="btn btn-outline-secondary btn-sm">
            Back to Inbox
        </a>
    </div>

    @if (!Model.Requests.Any())
    {
        <div class="text-center p-5 text-muted">
            <i class="bi bi-check2-circle fs-1"></i>
            <p>No pending requests.</p>
        </div>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Patient</th>
                    <th>Subject</th>
                    <th>Reason</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Requests)
                {
                    <tr>
                        <td>@r.CreatedAtLocal</td>
                        <td>@r.PatientName</td>
                        <td>@r.Subject</td>
                        <td>@r.EscalationReason</td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="Accept" asp-route-id="@r.Id" class="d-inline">
                                <button class="btn btn-success btn-sm">Accept</button>
                            </form>

                            <form method="post" asp-page-handler="Decline" asp-route-id="@r.Id" class="d-inline">
                                <button class="btn btn-outline-danger btn-sm">Decline</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
