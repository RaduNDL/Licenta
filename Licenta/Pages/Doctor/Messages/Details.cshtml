@page "{id:guid}"
@model Licenta.Pages.Doctor.Messages.DetailsModel
@{
    ViewData["Title"] = "Message";
}
@section Styles {
    <link rel="stylesheet" href="~/css/doctor.css" />
}
<h2>Message</h2>

<div class="card">
    <div class="card-header">
        <strong>From:</strong> @Model.Message.Sender.UserName<br />
        <strong>To:</strong> @Model.Message.Recipient.UserName<br />
        <small>@Model.Message.SentAt.ToLocalTime().ToString("f")</small>
    </div>
    <div class="card-body">
        <h5>@Model.Message.Subject</h5>
        <hr />
        <pre class="p-2 bg-light">@Model.Message.Body</pre>
    </div>
</div>

<a asp-page="/Doctor/Messages/Inbox" class="btn btn-secondary mt-3">Back to inbox</a>
