@page
@model Licenta.Pages.Doctor.Predictions.LaunchModel
@{
    ViewData["Title"] = "Launch";
}

@section Styles {
    <link rel="stylesheet" href="~/css/drpredictions.css" asp-append-version="true" />
}

<div class="page-container">
    <div class="page-header mb-3">
        <h2 class="page-title">
            <i class="bi bi-box-arrow-up-right text-primary"></i> Launching model
        </h2>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
    {
        <div class="alert alert-info border-0 shadow-sm">@Model.StatusMessage</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex align-items-center gap-3">
                <div class="spinner-border" role="status" aria-hidden="true"></div>
                <div>
                    <div class="fw-semibold">Redirecting…</div>
                    <div class="text-muted small">If nothing happens, use the buttons below.</div>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <a asp-page="/Doctor/Predictions/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Back to dashboard
                </a>
            </div>
        </div>
    </div>
</div>