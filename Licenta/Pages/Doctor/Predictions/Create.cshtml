@page
@model Licenta.Pages.Doctor.Predictions.CreateModel
@{
    ViewData["Title"] = "New prediction";
}
@section Styles {
    <link rel="stylesheet" href="~/css/doctor.css" />
}
<h2>New prediction</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Input.PatientId" class="form-label"></label>
        <select asp-for="Input.PatientId" asp-items="Model.Patients" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ModelName" class="form-label"></label>
        <input asp-for="Input.ModelName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.InputSummary" class="form-label"></label>
        <textarea asp-for="Input.InputSummary" rows="3" class="form-control"></textarea>
        <small class="text-muted">Short description of symptoms / context.</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Input file (image / PDF etc.)</label>
        <input asp-for="Input.File" class="form-control" type="file" />
    </div>

    <button type="submit" class="btn btn-primary">Run prediction</button>
    <a asp-page="/Doctor/Predictions/Index" class="btn btn-secondary ms-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
